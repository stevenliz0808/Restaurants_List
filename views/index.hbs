<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <select
            id="sort"
            class="form-select"
            aria-label="Default select example"
            name="sort"
          >
            <option value="0" disabled>排序:</option>
            <option value="name">名稱</option>
            <option value="location">地區</option>
            <option value="category">分類</option>

          </select>
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{> message}}

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div>
            <a href="/restaurants/{{this.id}}" class="text-secondary">
              <div class="card mb-3">
                <img
                  class="card-img-top"
                  src="{{this.image}}"
                  alt="{{this.name}}"
                />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i>
                    {{this.category}}
                  </div>

                  <span class="badge rounded-pill bg-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                  <div class="d-flex justify-content-end mt-2">
                    <a
                      href="/restaurants/{{this.id}}/edit"
                      class="fas fa-pen mx-2"
                    ></a>
                    <form
                      action="/restaurants/{{this.id}}?_method=DELETE"
                      method="post"
                    >
                      <button class="fas fa-trash" type="submit"></button>
                    </form>
                  </div>
                </div>
              </div>
            </a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
  const sortSelect = document.querySelector("#sort")
  sortSelect.value = '{{sort}}' || '0'
</script>